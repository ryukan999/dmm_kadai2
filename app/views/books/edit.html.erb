<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>  

<%= form_with model:@book,url:"/books/#{@book.id}", method:'patch' do |f|%>
    <label>Title</label><br>
    <%= f.text_field :title %><br>
    <label>Body</label><br>
    <div class="text_area">
      <%= f.text_area :body %><br>
    </div>
    <div class="submit">
      <%= f.submit 'Update Book' %>
    </div>
<% end %>

<%= link_to 'Show',"/books/#{@book.id}" %> |
<%= link_to 'Back','/books' %>